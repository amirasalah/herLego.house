---
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout>
  <section class="relative h-full w-full overflow-hidden">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute z-0 object-cover"
      src="/claymotion_videos.mp4"></video>
    <section
      class="absolute bottom-0 left-0 z-10 bg-white/50 p-5 leading-none text-black"
    >
      <section class="my-10 flex flex-col gap-2">
        <h1 class="text-4xl">Her lego house</h1>
        <h2 class="text-xl">Creative development space</h2>
      </section>
      <p class="text-md">
        Video created using <a
          href="https://runwayml.com/research/gen-2"
          target="_blank"
          rel="noopener noreferrer">RunwayML Gen-2 Text to Video</a
        >
      </p>
    </section>
  </section>
</Layout>
